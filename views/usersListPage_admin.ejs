<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin - Users Info</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr" crossorigin="anonymous">
    <style>
        /* To hide table layout and show card layout - for small screens*/
        @media (max-width: 768px) {
         .user-table { display: none; }
        }
        /* To hide card layout and show table layout for medium and large screens*/
        @media (min-width: 769px) {
         .user-cards { display: none; }
        }
    </style>
</head>

<body class="bg-light">

    <!-- Header - imported from /partials -->
    <%- include('partials/_header_admin') %>


    <!-- Navbar - imported from /partials -->
    <%- include('partials/_navbar_admin')%>

    <!-- Helper function to convert date from YYYY-MM-DD to DD-MM-YYYY -->
    <% function dateConversion(dateInYMD){
      const parts = dateInYMD.split('-')
      const dateInDMY = `${parts[2]}-${parts[1]}-${parts[0]}`
      return dateInDMY;
    }%>

    <%if(data.message.length > 0) {%>

      <div class="toast-container position-fixed bottom-0 end-0 p-3">
        <div id="liveToast" class="toast" role="alert" >
          <div class="toast-body bg-success bg-gradient text-white">
            <%=data.message%>
          </div>
        </div>
      </div>

  <%}%>


    <%if(data.users.length > 0){%>

        <!-- User Information Template -->
        <div class="container my-5">
        
          <!-- TABLE VIEW - For Medium & Large Screens -->
          <div>
            <table class="table table-column-striped table-hover align-middle user-table">
              <thead class="table-secondary table-danger">
                <tr>
                  <th colspan="2" scope="col" style="text-align: center;">User</th>
                  <th>Role</th>
                  <th>Status</th>
                  <th>Signup Date</th>
                  <th>Actions</th>
                </tr>
              </thead>

              <%data.users.forEach(function(user){%>

                <tbody class="user-table">
                  <tr>
                    <td style="width: 50px; height: 50px;"><img src="https://avatar.iran.liara.run/username?username=<%=user.username%>" width="50" height="50" class="rounded-circle me-2"></td>
                    <td><%=user.username%></td>
                    <td><%=user.role%></td>

                    <% // User status %>
                    <td>
                      <%if(user.isRestricted === false) {%>
                        <span class="badge bg-success">Good</span>
                      <%} else {%>
                        <span class="badge bg-warning">Restricted</span>
                      <%}%>
                    </td>

                    <td><%=dateConversion(user.createdAt.toISOString().substring(0,10))%></td>

                    <% // Restrict/Unrestrict , delete buttons %>
                    <td>
                      <div class="d-flex gap-2 mx-0">
                        <%if(user.isRestricted === false){%>
                          <form action="/admin/restrictUser" method="post">
                            <input type="text" class="d-none" value="<%=user.username%>" name="username">
                            <button class="btn btn-sm btn-primary" type="submit">Restrict</button>
                          </form>
                        <%} else {%>
                          <form action="/admin/restrictUser" method="post">
                            <input type="text" class="d-none" value="<%=user.username%>" name="username">
                            <button class="btn btn-sm btn-success" type="submit">Unrestrict</button>
                          </form>
                        <%}%>
  
                        <form action="/admin/deleteUser?_method=DELETE" method="post">
                          <input type="text" class="d-none" value="<%=user.username%>" name="username">
                          <button class="btn btn-sm btn-danger" type="submit">Delete</button>
                        </form>
                      </div>

                    </td>
                  </tr>
                </tbody>

                <!-- CARD VIEW - For Small Screens -->
                <div class="user-cards">
                  <div class="card mb-3">
                    <div class="card-body">
                      <div class="d-flex align-items-center">
                        <img src="https://avatar.iran.liara.run/username?username=<%=user.username%>" width="40" height="40" class="rounded-circle me-2">
                        <div>
                          <h6 class="mb-0"><%=user.username%></h6>
                        </div>
                      </div>
                      <div class="mt-3">
                        
                        <%if(user.isRestricted === false) {%>
                          <span class="badge bg-success">Good</span>
                        <%} else {%>
                          <span class="badge bg-warning">Restricted</span>
                        <%}%>

                        <span class="badge bg-secondary"><%=user.role%></span>
                        <small class="d-block mt-1">Signup Date  <%= dateConversion(user.createdAt.toISOString().substring(0,10)) %></small>
                        <div class="mt-2">
                          <button class="btn btn-sm btn-primary">Restrict</button>
                          <button class="btn btn-sm btn-danger">Delete</button>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>

              <%})%>

            </table>
          </div>
        </div>
    <%} else {%>
      <p>No users found</p>
    <%}%>
        


  
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<script>
  // initializing BS Toast component
  document.addEventListener('DOMContentLoaded', function() {
    var toastElement = document.getElementById('liveToast');
    if (toastElement) {
      var toast = new bootstrap.Toast(toastElement); // Calling BS toast function
      toast.show(); 

      // Hide toast after 3 seconds 
      setTimeout(function() {
        toast.hide();
      }, 3000);
    }
  });
</script>

</body>
  
</html>